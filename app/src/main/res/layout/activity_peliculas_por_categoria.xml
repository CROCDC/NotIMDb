<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".View.Activitys.PeliculasPorCategoriaActivity">

    <TextView
        android:textColor="@color/blanco"
        android:gravity="center"
        android:id="@+id/textViewTituloDeLaCategoria_activitypeliculasporcategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="25sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_gravity="center"
        android:id="@+id/recyclerViewListaDePeliculasPorGenero_activitypeliculasporcategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>