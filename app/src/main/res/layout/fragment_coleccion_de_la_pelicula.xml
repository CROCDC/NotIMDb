<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutContenedor_fragmentcolecciondelapelicula"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".View.Fragments.Pelicula.ColeccionDeLaPeliculaFragment">


    <TextView
        android:id="@+id/textViewTituloDeLaColeccion_fragmentcolecciondelapelicula"
        style="@style/textoPlano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blanco"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageViewBackgrounDeLaColeccion_fragmentcolecciondelapelicula"
        android:layout_width="360dp"
        android:layout_height="210dp" />

    <TextView
        style="@style/textoPlano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resumen"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewDescripcionDeLaColeccion_fragmentcolecciondelapelicula"
        style="@style/textoPlano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" />

    <TextView
        style="@style/textoPlano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/peliculas_de_la_coleccion"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewListaDePeliculasDeLaColeccion_fragmentcolecciondelapelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>