<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/teal"
        app:cardElevation="15dp"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewDeLaNoticia_celdanoticia"
                android:layout_width="330dp"
                android:layout_height="330dp" />

            <WebView
                style="@style/losWebViewSeHacenLosLocos"
                android:textColor="@color/blanco"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:id="@+id/webViewTituloDeLaNoticia_celdanoticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <WebView
                style="@style/losWebViewSeHacenLosLocos"
                android:textSize="12sp"
                android:background="@color/teal"
                android:textColor="@color/blanco"
                android:layout_margin="10dp"
                android:id="@+id/webViewDescripcionDeLaNoticia_celdanoticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>