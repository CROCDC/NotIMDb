<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".View.Fragments.Serie.CreadorDeLaSerieFragment">

    <TextView
        style="@style/textoPlano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creador_de_la_serie"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewNombreDelCreador_fragmentcreadordelaserie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/blanco"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewPerfilCreadorDeLaSerie_fragmentcreadordelaserie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />


</LinearLayout>