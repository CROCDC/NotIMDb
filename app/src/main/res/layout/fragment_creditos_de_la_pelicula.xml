<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".View.Fragments.Pelicula.CreditosDeLaPeliculaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/textoPlano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reparto_principal"
            android:textSize="25sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewListaDeActores_fragmentcreditosdelapelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <TextView
            style="@style/textoPlano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equipo_principal"
            android:textSize="25sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewListaDelEquipo_fragmentcreditosdelapelicula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>